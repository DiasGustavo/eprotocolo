<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0">
	<display-name>Protocolo Digital</display-name>
	<welcome-file-list>
		<welcome-file>pages/autenticacao.xhtml</welcome-file>
	</welcome-file-list>
	<servlet>
		<servlet-name>Faces Servlet</servlet-name>
		<servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>Faces Servlet</servlet-name>
		<url-pattern>*.xhtml</url-pattern>
	</servlet-mapping>
	
	<!-- Tema do primefaces -->
	<context-param>
		<param-name>primefaces.THEME</param-name>
		<param-value>custom-theme</param-value>
	</context-param>

	<session-config>
		<session-timeout>120</session-timeout>
	</session-config>
	<!-- Carregamento do Hibernate -->
	<listener>
		<listener-class>br.com.protocoloeletronico.util.ContextListener</listener-class>
	</listener>

	<!-- Filtro para o upload do arquivo -->
	<context-param>
		<param-name>primefaces.UPLOADER</param-name>
		<param-value>auto</param-value>
	</context-param>

	<filter>
		<filter-name>Faces Servlet</filter-name>
		<filter-class>org.primefaces.webapp.filter.FileUploadFilter</filter-class>
		<init-param>
			<param-name>thresholdSize</param-name>
			<param-value>51200</param-value>
		</init-param>
		<init-param>
			<param-name>uploadDirectory</param-name>
			<param-value>/documentos/padrao</param-value>
		</init-param>
	</filter>

	<filter-mapping>
		<filter-name>Faces Servlet</filter-name>
		<servlet-name>Faces Servlet</servlet-name>
	</filter-mapping>

</web-app>